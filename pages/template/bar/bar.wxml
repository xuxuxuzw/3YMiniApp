            <text class="cuIcon-home lg text-green"></text>
          </view>
          <view class="text-green">首页</view>
        </view>
        <view bindtap="navigateToBar" data-url='/pages/index/index' wx:else class="action">
          <view class="cuIcon-cu-image">
            <text class="cuIcon-home lg text-gray"></text>
          </view>
          <view class="text-gray">首页</view>
        </view>
      </block>

      
      <block>
        <view wx:if="{{activityBar.activityBar=='1'}}" class="action">
