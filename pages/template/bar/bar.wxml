          <view class="text-green">店铺</view>
        </view>
        <view bindtap="navigateToBar" data-url='/pages/store/store' wx:else class="action">
          <view class="cuIcon-cu-image">
            <text class="cuIcon-shop lg text-gray"></text>
          </view>
          <view class="text-gray">店铺</view>
        </view>
      </block>

      
      <block>
        <view wx:if="{{activityBar.activityBar=='2'}}" class="action">
