            <text class="cuIcon-friendfill lg text-green"></text>
          </view>
          <view class="text-green">供应商</view>
        </view>
        <view bindtap="navigateToBar" data-url='/pages/supplier/supplier' wx:else class="action">
          <view class="cuIcon-cu-image">
            <text class="cuIcon-friendfill lg text-gray"></text>
          </view>
          <view class="text-gray">供应商</view>
        </view>
      </block>

      <block>
        <view wx:if="{{activityBar.activityBar=='3'}}" class="action">
          <view class="cuIcon-cu-image">
            <text class="cuIcon-people lg text-green"></text>
          </view>
          <view class="text-green">我的</view>
        </view>
        <view bindtap="navigateToBar" data-url='/pages/me/me' wx:else class="action">
